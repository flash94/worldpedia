<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/quizbk"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tomiwa.folalu.worldpedia.MainActivity"
    tools:showIn="@layout/activity_main">


    <TextView
        android:id="@+id/question10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="@android:color/darker_gray"
        android:textSize="30sp"
        android:textStyle="italic"
        android:textColor="@android:color/black"
        android:text="Which of the following country can be said to belong to North America?"/>

    <Button
        android:id="@+id/option37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/purple"
        android:layout_below="@id/question10"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        style="@style/button_text"
        android:shadowColor="@android:color/darker_gray"
        android:text="Canada"
        android:onClick="option1" />

    <Button
        android:id="@+id/option38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option37"
        android:background="@drawable/purple"
        android:layout_centerInParent="true"
        android:shadowColor="@android:color/darker_gray"
        style="@style/button_text"
        android:text="Brazil"
        android:onClick="option"/>

    <Button
        android:id="@+id/option39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option38"
        android:layout_centerInParent="true"
        android:background="@drawable/purple"
        android:shadowColor="@android:color/darker_gray"
        style="@style/button_text"
        android:text="Gambia"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/option40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@drawable/purple"
        android:shadowColor="@android:color/darker_gray"
        style="@style/button_text"
        android:text="NEXT"
        android:onClick="onClick"/>
</RelativeLayout>